<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
			rel="stylesheet"
		/>

		<title>Matches</title>
	</head>
	<body class="bg-gray-200">
		<%- include('../partials/navigation'); %>
		<main class="p-8">
			<h1 class="text-center font-bold text-2xl uppercase">Matches</h1>
			<% matches.forEach(function(match) { %>
			<div class="rounded-lg mb-2 text-center shadow-lg p-8">
				<img src="<%= match.event.logo %>" alt="logo" class="w-24 mx-auto" />
				<h2 class="font-bold text-xl"><%= match.event.name %></h2>
				<p><%= match.time %></p>
				<span class="bg-gray-700 px-4 text-white rounded-lg"
					><%= match.maps %></span
				>
				<div class="flex justify-between">
					<% match.teams.forEach(function(team) { %>
					<div>
						<img src="<%= team.logo %>" alt="logo" class="w-24" />
						<p class="font-bold"><%= team.name %></p>
					</div>
					<% }); %>
				</div>
			</div>
			<% }); %>
		</main>
	</body>
</html>
